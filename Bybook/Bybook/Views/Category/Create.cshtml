@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class= "row pb-2">
			<h2>
				Create Category
			</h2>
			<hr />
		</div>
		<div class= " row mb-3">
			<label asp-for="Name"> </label>
			<input asp-for="Name" type="text" class="form-control" />

		</div>
		<div class="row mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" type="text" class="form-control" />

		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary">
					Create
				</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border">Back to list</a>

			</div>
		</div>
		

	</div>
</form>

